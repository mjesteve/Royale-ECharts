<j:ListItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
    xmlns:j="library://ns.apache.org/royale/jewel" 
    xmlns:js="library://ns.apache.org/royale/basic">

    <fx:Script>
        <![CDATA[
            import echarts.vos.EChartsThemeTemplateVO;


            private var _imgField:String = "thumb";
            [Bindable]
            public function get imgField():String{ return _imgField; }
            public function set imgField(value:String):void { 
                _imgField = value; 
            }

            private var _toolTipField:String = "themeName";
            [Bindable]
            public function get toolTipField():String{ 
                if(!_toolTipField)
                    _toolTipField = labelField;
                return _toolTipField; 
            }
            public function set toolTipField(value:String):void { 
                _toolTipField = value; 
            }
                        
            [Bindable("dataChange")]
            public function get dataReg():EChartsThemeTemplateVO
            {
                return data as EChartsThemeTemplateVO;
            }
            
		]]>
    </fx:Script>

    <j:beads>
        <js:ItemRendererDataBinding />
        <j:ToolTip localId="tt" toolTip="{dataReg[toolTipField]}"/>
        <js:ToolTipRemovalWhenItemRemoved tooltip="{tt}"/>
        <j:HorizontalLayout itemsHorizontalAlign="itemsCenter" itemsVerticalAlign="itemsCenter"/>
    </j:beads>
   
    <j:Image src="{dataReg[imgField]}"/>
    
</j:ListItemRenderer>

