<j:ListItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
    xmlns:j="library://ns.apache.org/royale/jewel" 
    xmlns:js="library://ns.apache.org/royale/basic"
    style="border-bottom: 1px solid #d2dadf;">

    <fx:Script>
        <![CDATA[

            import com.proj.example.vos.TypeGen_NameValueVO;
            import org.apache.royale.html.accessories.NumberFormatter;
                        
            [Bindable("dataChange")]
            public function get dataReg():TypeGen_NameValueVO
            {
                if(!data)
                    return new TypeGen_NameValueVO;
                else{
                    return data as TypeGen_NameValueVO;
                }
            }
            
            [Bindable("dataChange")]
            private function get internationalFormat():String {
                trace('IT ---------', lblname.width, lbltotal.width);
                var res:String="";
                var frt:NumberFormatter = new NumberFormatter;
                frt.thousandsSeparator = "."
                res = frt.format(dataReg.value);
                return res;
            }
     
            
		]]>
    </fx:Script>

    <j:beads>
        <js:ItemRendererDataBinding />
        <j:HorizontalLayout itemsHorizontalAlign="itemsCenter" itemsVerticalAlign="itemsCenter" gap="3"/>
    </j:beads>
   
    <j:Label localId="lblname" text="{dataReg.name}" width="60%" style="font-weight: bold; ">
        <j:beads>
            <j:TruncateText/>
        </j:beads>
    </j:Label>
   
    <j:Label localId="lbltotal" text="{internationalFormat}" width="40%">
        <j:beads>
            <j:TruncateText/>
            <j:TextAlign align="right"/>
        </j:beads>
    </j:Label>
    
</j:ListItemRenderer>

